@model Thix_o.ViewModels.PublicacionViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Publication.cshtml";
}

    <link href="~/css/Publicacion.css" rel="stylesheet" />

    <body style="background-color: darkslategray">
        <div class="card">
            <div class="bg-warning text-light card-header">
                <a asp-action="Index" class="btn btn-success text-light"  style=" background-color: darkturquoise" >Volver Atras</a> &nbsp; Editando publicacion
            </div>
            <div class="card-body" style="background-color: darkcyan">
                <div>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="FechaHora" />
                        <input type="hidden" asp-for="IdUsuario" />
                        <input type="hidden" asp-for="IdPublicacion" />
                        <div class="form-group text-center">
                            <textarea asp-for="Contenido" class="control-label" style=" background-color: darkturquoise"></textarea>
                            <span asp-validation-for="Contenido" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn" style=" background-color: darkturquoise" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
